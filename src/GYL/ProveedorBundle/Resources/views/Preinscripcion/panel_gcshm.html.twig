                                       onclick="quitarDocumentoGcshm({{ documentoGcshm.id }})" style="cursor: pointer; padding-top: 1.5%"></i>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </form>
        </div>
    </div>

    <div class="col-lg-12 text-right">
        {% if estadoEvaluacionGral is null or (estadoEvaluacionGral == 4 and observacionEvaluacion is not null) or unlockForm %}
            <button type="submit" class="btn btn-info btn-borrador" id="submitGchsm">
                <span> {% image '@saveldpi1' %}
                    <img class="image-responsive" src="{{ asset_url }}">
                    {% endimage %}</span></button>
                {% endif %}
    </div>
</div>