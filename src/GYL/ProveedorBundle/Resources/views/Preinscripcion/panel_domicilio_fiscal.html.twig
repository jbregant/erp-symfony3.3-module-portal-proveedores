{% block javascripts %}
    {% javascripts '@panel_domicilio_fiscal_js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
<div class="panel-heading bg-primary" role="button" data-toggle="collapse" href="#dom-fiscal"
     aria-expanded="false" aria-controls="collapseExample"><h5>Domicilio
        Fiscal {% if datoPersonal.extranjero == 1 %}(del apoderado en el país, en caso de corresponder){% endif %}</h5>
</div>
<div class="panel-body collapse" id="dom-fiscal">
    <div class="col-md-12">
        {{ form_start(domicilioFormFiscal ,{'attr': {'id': 'domicilioFormFiscal', 'class': 'form-horizontal col-lg-11 col-lg-offset-1 datos-registro pad-top'}} ) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="domicilio-provincia" class="control-label" style="float:left;"
                           id="label-provincia"><span class="text-danger">*</span>Provincia</label>
                    {% if estadoEvaluacionGral is null or (estadoEvaluacionGral == 4 and observacionEvaluacion is not null) or unlockForm   %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.provincias_fiscal,{ 'attr': {'class': 'form-control'} }) }}
                        </div>
                    {% else %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.provincias_fiscal,{ 'attr': {'disabled':'disabled'} }) }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="domicilio-provincia" class="control-label ml-fl-domicilio"
                           id="label-localidad"><span class="text-danger">*</span>Localidad</label>
                           {{ form_widget(domicilioFormFiscal.provincias_fiscal,{ 'attr': {'class': 'form-control'} }) }}
                    {% if estadoEvaluacionGral is null or (estadoEvaluacionGral == 4 and observacionEvaluacion is not null) or unlockForm  %}
                        <div class="col-md-8">
                            <select required class="select-pronvicia form-control" name="state" id="selected-localidad-fiscal">
                            </select>
                        </div>
                    {% else %}
                        <div class="col-md-8">
                            <select required class="select-pronvicia form-control" name="state" id="selected-localidad-fiscal" disabled="disabled">
                            </select>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group ">
                    <label class="control-label" style="float:left;"
                           id="label-postal"><span class="text-danger">*</span>Código Postal</label>
                    {% if estadoEvaluacionGral is null or (estadoEvaluacionGral == 4 and observacionEvaluacion is not null) or unlockForm   %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.codigo_postal,{ 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(domicilioFormFiscal.codigo_postal) }}
                        </div>
                    {% else %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.codigo_postal,{ 'attr': {'disabled':'disabled'} }) }}
                            {{ form_errors(domicilioFormFiscal.codigo_postal) }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label ml-fl-domicilio"
                           id="label-calle"><span class="text-danger">*</span>Calle/Nro de calle</label>
                    {% if estadoEvaluacionGral is null or (estadoEvaluacionGral == 4 and observacionEvaluacion is not null) or unlockForm  %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.calle,{ 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(domicilioFormFiscal.calle) }}
                        </div>
                    {% else %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.calle,{ 'attr': {'disabled':'disabled'} }) }}
                            {{ form_errors(domicilioFormFiscal.calle) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group ">
                    <label class="control-label" style="float:left;"
                           id="label-piso">Piso</label>
                    {% if estadoEvaluacionGral is null or (estadoEvaluacionGral == 4 and observacionEvaluacion is not null) or unlockForm  %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.piso,{ 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(domicilioFormFiscal.piso) }}
                        </div>
                    {% else %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.piso,{ 'attr': {'disabled':'disabled'} }) }}
                            {{ form_errors(domicilioFormFiscal.piso) }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label ml-fl-domicilio" style="float:left;"
                           id="label-dpto">Dpto</label>
                    {% if estadoEvaluacionGral is null or (estadoEvaluacionGral == 4 and observacionEvaluacion is not null) or unlockForm   %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.departamento,{ 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(domicilioFormFiscal.departamento) }}
                        </div>
                    {% else %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.departamento,{ 'attr': {'disabled':'disabled'} }) }}
                            {{ form_errors(domicilioFormFiscal.departamento) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label" style="float:left;"
                           id="label-telefono"><span class="text-danger">*</span>Teléfono</label>
                    {% if estadoEvaluacionGral is null or (estadoEvaluacionGral == 4 and observacionEvaluacion is not null) or unlockForm   %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.telefono,{ 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(domicilioFormFiscal.telefono) }}
                        </div>
                    {% else %}
                        <div class="col-md-8">
                            {{ form_widget(domicilioFormFiscal.telefono,{ 'attr': {'disabled':'disabled'} }) }}
                            {{ form_errors(domicilioFormFiscal.telefono) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {{ form_end(domicilioFormFiscal) }}

    {% if observacionEvaluacion is not null %}
        {% include '@ProveedorBundle/Resources/views/Partials/observacion.html.twig' %}
    {%endif %}

    <div class="text-right">
        {% if estadoEvaluacionGral is null or (estadoEvaluacionGral == 4 and observacionEvaluacion is not null) or unlockForm   %}
            <button type="submit" class="btn btn-info  btn-borrador" id="submitDomicilioFormFiscal">
            <span> {% image '@saveldpi1' %}
                    <img class="image-responsive" src="{{ asset_url }}">
                {% endimage %}</span></button>
        {% endif %}
    </div>


    <!--****************************        			DOCUMENTACION     *************************-->

</div>
