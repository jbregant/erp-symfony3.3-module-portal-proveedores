{% for mensajes in app.flashes %}
    {% for mensaje in mensajes %}
        <div>{{ mensaje }}</div>
    {% endfor %}
{% endfor %}

<form id="loginForm" action="{{ path("preinscripcion_crear") }}" method="post">

    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="row">
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-1">
                <label><b>¿Proveedor Extranjero?</b></label>
                <button id="extranjero" name="extranjero" type="button" class="btn btn-sm btn-secondary btn-toggle" data-toggle="button" aria-pressed="false"
                        autocomplete="off"
                        onclick="proveedorExtranjero(this)">
                    <div class="handle"></div>
                </button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-1 col-lg-2 col-md-1 col-sm-2 col-xs-2">
                <label><b>Email</b></label>
            </div>
            <div class="col-lg-10 col-lg-offset-1">
                <input type="email" class="form-control" id="email" name="email" placeholder="email@prueba.com" maxlength="50" required="required"/>
            </div>
        </div>

        <div class="form-group fg-identificacion-tributaria" hidden>
            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-8">
                <label><b>Nro. de Identificación tributaria del país</b></label>
            </div>
            <div class="col-lg-10 col-lg-offset-1" style="margin-bottom: 10px">
                <input type="text" id="identificacion_tributaria" maxlength="20" name="identificacion_tributaria" class="form-control">
            </div>
        </div>

        <div class="form-group fg-cuit">
            <div class="col-lg-offset-1 col-lg-2 col-md-1 col-sm-2 col-xs-2">
                <label><b>Cuit</b></label>
            </div>
            <div class="col-lg-10 col-lg-offset-1" style="margin-bottom: 10px">
                <input type="text" id="cuit" name="cuit" class="form-control" placeholder="99-99999999-9" required="required">
            </div>
        </div>

        <div class="form-group fg-website" hidden>
            <div class="col-lg-6 col-md-4 col-sm-3 col-xs-3">
                <label for="website"><b>Dirección Web</b></label>
            </div>
            <div class="col-lg-10 col-lg-offset-1" style="margin-bottom: 10px">
                <input type="url" id="website" name="website" maxlength="50" class="form-control" placeholder="http://www.google.com">
            </div>
        </div>

    </div>

    <div class="row">
            <div class="col-md-12 col-sm-12">
                <div id="my-recaptcha" class="btn g-recaptcha" data-size="normal" data-sitekey="{{ recaptcha_public_key }}"></div>
                
            </div>    
            <div class="col-md-12 col-sm-12">
                <button type="submit" id="enviar" name="enviar" class="btn btn-primary fa fa-angle-right"></button>
            </div>

    </div>

</form>